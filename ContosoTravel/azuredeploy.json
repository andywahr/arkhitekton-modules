{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "maxLength": 8,
      "type": "string"
    }
  },
  "variables": {
    "vnetName": "[concat(parameters('namePrefix'),'VNet1')]",
    "subnet1Name": "Subnet1",
    "subnet2Name": "Subnet2",
    "location": "[resourceGroup().location]",
    "apiVersion": "2018-07-01",
    "siteName": "[concat('contosotravel-', parameters('namePrefix'))]",
    "serviceName": "[concat('contosotravel-', parameters('namePrefix'), '-service')]",
    "hostNameBindings": "[concat(variables('siteName'), '.azurewebsites.net')]",
    "baseURI": "https://andywahrstorapps.blob.core.windows.net/contosotravel",
    "LogAnalyticsLink": "[concat(variables('baseURI'),'/base/loganalytics/azuredeploy-loganalytics.json')]",
    "StorageLink": "[concat(variables('baseURI'),'/base/storage/azuredeploy-storage.json')]",
    "VNETLink": "[concat(variables('baseURI'),'/base/vnet/azuredeploy-vnet.json')]",
    "AppInsightsLink": "[concat(variables('baseURI'),'/base/appinsights/azuredeploy-appinsights.json')]",
    "KeyVaultLink": "[concat(variables('baseURI'),'/base/keyvault/azuredeploy-keyvault.json')]",
    "keyVaultName": "[concat(parameters('namePrefix'), '-keyvault')]",
    "keyVaultUrl":"[concat('https://', variables('keyVaultName'), '.vault.azure.net/')]",
    "dataAdministratorLogin":"[concat('U', uniqueString(resourceGroup().id, 'a72a1444-c799-4b70-9d69-f4985d15d372'), '#', '@')]",
    "dataAdministratorLoginPassword":"[concat('P', uniqueString(resourceGroup().id, '29cd7b98-f860-47e5-b284-206eb7de4505'), 'x', '!')]"
  },
  "resources": [    
    {
      "type": "Microsoft.Resources/deployments",
      "name": "LogAnalytics-Template",
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('LogAnalyticsLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namePrefix": {
            "value": "[parameters('namePrefix')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "VNET-Template",
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('VNETLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "subnet1Name": {
            "value": "[variables('subnet1Name')]"
          },
          "subnet2Name": {
            "value": "[variables('subnet2Name')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "Storage-Template",
      "dependsOn": [
        "VNET-Template"
      ],
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('StorageLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namePrefix": {
            "value": "[parameters('namePrefix')]"
          },
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "subnet1Name": {
            "value": "[variables('subnet1Name')]"
          },
          "subnet2Name": {
            "value": "[variables('subnet2Name')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "AppInsights-Template",
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('AppInsightsLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namePrefix": {
            "value": "[parameters('namePrefix')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "KeyVault-Template",
      "dependsOn": [
        "WebSite-Template",
        "Service-Template",
        "Eventing-Template",
        "Data-Template"
      ],
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('KeyVaultLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[variables('keyVaultName')]"
          },
          "webMSI": {
            "value": "[reference('WebSite-Template').outputs.webMSI.value]"
          },
          "serviceMSI":{
            "value": "[reference('Service-Template').outputs.serviceMSI.value]"
          },
          "serviceType": {
            "value": "[reference('Eventing-Template').outputs.serviceType.value]"
          },
          "serviceAccountName": {
            "value": "[reference('Eventing-Template').outputs.serviceAccountName.value]"
          },
          "dataAccountName": {
            "value": "[reference('Data-Template').outputs.dataAccountName.value]"
          },
          "dataType": {
            "value": "[reference('Data-Template').outputs.dataType.value]"
          },
          "dataAdministratorLoginPassword": {
            "value": "[variables('dataAdministratorLoginPassword')]"
          } ,
          "dataAdministratorLogin": {
            "value": "[variables('dataAdministratorLogin')]"
          }  
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "WebSite-Template",
      "dependsOn": [
        "AppInsights-Template"
      ],
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('baseURI'),'/web/appservice/azuredeploy-appservice.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namePrefix": {
            "value": "[parameters('namePrefix')]"
          },
          "appInsightInstrumentationKey": {
            "value": "[string(reference('AppInsights-Template').outputs.appInsightInstrumentationKey.value)]"
          },
          "webSiteFQDN": {
            "value": "[variables('hostNameBindings')]"
          },
          "siteName": {
            "value": "[variables('siteName')]"
          },
          "keyVaultUrl" : {
              "value": "[variables('keyVaultUrl')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "Eventing-Template",
      "dependsOn": [],
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('baseURI'),'/eventing/eventgrid/azuredeploy-eventgrid.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namePrefix": {
            "value": "[parameters('namePrefix')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "Service-Template",
      "dependsOn": [
        "AppInsights-Template",
        "Eventing-Template",
        "Storage-Template"
      ],
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('baseURI'),'/backend/functions/azuredeploy-functions.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namePrefix": {
            "value": "[parameters('namePrefix')]"
          },
          "appInsightInstrumentationKey": {
            "value": "[string(reference('AppInsights-Template').outputs.appInsightInstrumentationKey.value)]"
          },
          "serviceName": {
            "value": "[string(reference('Eventing-Template').outputs.serviceAccountName)]"
          },
          "serviceType": {
            "value": "[string(reference('Eventing-Template').outputs.serviceType)]"
          },
          "keyVaultUrl" : {
              "value": "[variables('keyVaultUrl')]"
          },
          "serviceBusConnectionString" : {
            "value" : "[if(equals(reference('Eventing-Template').outputs.serviceType, 'ServiceBus'), string(reference('Eventing-Template').outputs.serviceConnectionString), '')]"              
          },
          "storageAccountName": {
            "value": "[string(reference('Storage-Template').outputs.storageAccountName.value)]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "Data-Template",
      "dependsOn": [],
      "apiVersion": "[variables('apiVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('baseURI'),'/data/cosmos/azuredeploy-cosmos.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "namePrefix": {
            "value": "[parameters('namePrefix')]"
          }
        }
      }
    }
  ]
}